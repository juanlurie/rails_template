.topbar
  .fill
    .container
      = link_to t('application.name'), root_path, :class => 'brand'

      - if user_signed_in?
        %ul.nav.secondary-nav.user-actions
          %li.dropdown{:'data-dropdown' => 'dropdown'}
            = link_to '#', :class => 'dropdown-toggle user' do
              = image_tag current_user.avatar.tiny.url, :alt => current_user.email, :size => '20x20', :class => 'avatar'
              %span= current_user.email
            %ul.dropdown-menu
              %li= link_to 'Settings', edit_user_registration_path
              %li.divider
              %li= link_to 'Log out', destroy_user_session_path, :method => :delete
      - else
        %p.account.pull-right
          %small.already Already have an account?
          = link_to 'Sign in', new_user_session_path
          %small.or or
          = link_to 'Sign up', new_user_registration_path
