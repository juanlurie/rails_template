.topbar
  .fill
    .container
      = link_to I18n.t('application.name'), root_path, :class => 'brand'

      %ul.nav.secondary-nav.user-actions
        - if user_signed_in?
          %li.dropdown{:'data-dropdown' => 'dropdown'}
            = link_to '#', :class => 'dropdown-toggle user' do
              = image_tag current_user.avatar.tiny.url, :alt => current_user.email, :size => '20x20'
              %span= current_user.email
            %ul.dropdown-menu
              %li= link_to 'Settings', edit_user_registration_path
              %li.divider
              %li= link_to 'Logout', destroy_user_session_path, :method => :delete
        - else
          %li= link_to 'Login', new_user_session_path
          %li= link_to 'Sign up', new_user_registration_path
